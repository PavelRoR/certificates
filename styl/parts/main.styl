#header
	padding: 14px 0
	overflow hidden
	z-index: 9
	position relative
	margin-bottom: 15px
#logo
	float: left
	width 165px
	height auto
.contacts
	float: right
	text-align: right
	line-height  22px
	a
		&:focus
			text-decoration: none
		i
			color: #fff
			font-size: 15px
			margin: 0 10px 0 25px
			line-height: 15px
			vertical-align: baseline
		i+span
			line-height: 15px
			font-size: 15px;
			font-family: "OpenSans", sans-serif;
			color: rgba(#fff, 1)
			text-align: right;
			&:hover
				text-decoration underline
.tel:first-child
	.fas-phone
		margin-left: 0
#main
	width 100%	
	padding 0 0 60px
	background-color #870B3A
	background-image url(../img/bg.jpg)
	background-position: center
	background-size: cover
	min-height calc(100vh - 198px)
.main_title
	background-color rgba(#fff, .95)
	color #000000
	padding: 10px
	text-transform: uppercase
	text-align: center
	font-family: 'OpenSansBold', sans-serif;
.subtitle_container
	position relative
.main_subtitle
	background-color rgba(#fff, .95)
	color #000000
	text-align: center
	padding 10px
	font-size: 22px
	font-family: 'OpenSansCondensedBold', sans-serif;
	line-height: 1.3
	border-radius: 5px
	position relative
	z-index 9
	width 100%
	max-width 450px
	margin 110px auto 0
#gift
	display block
	position: absolute
	width 600px
	height auto
	left -20px
	top -100px
	z-index 0
.cert
	margin-bottom: 30px
	overflow hidden
	text-align: center
	a
		display: inline-block
		width 100%
		max-width 50%
	.button
		max-width 150px
.cert_img
	width 100%
	max-width 200px
	height auto
	box-shadow: 0 0 16px 0 rgba(0,0,0,.5);